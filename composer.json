{
    "name": "8ctopus/webp8",
    "type": "project",
    "description": "webp conversion command line tool",
    "homepage": "https://github.com/8ctopus/webp8",
    "license": "MIT",
    "authors": [
        {
            "name": "8ctopus",
            "email": "hello@octopuslabs.io"
        }
    ],
    "require": {
        "symfony/console": "^6",
        "symfony/stopwatch": "^6",
        "symfony/finder": "^6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpstan/phpstan": "^1.9",
        "phpmd/phpmd": "^2.13"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Oct8pus\\Webp\\": "src"
        }
    },
    "scripts": {
        "fix": "php-cs-fixer fix --verbose",
        "fix-risky": "php-cs-fixer fix --allow-risky=yes --verbose",
        "phpstan": "phpstan analyse --level 9 src",
        "phpmd": "phpmd src ansi phpmd.xml"
    },
    "bin": [
        "webp8"
    ]
}
