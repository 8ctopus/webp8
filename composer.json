{
    "name": "8ctopus/webp8",
    "type": "application",
    "description": "command line tool to convert images to webp",
    "keywords": ["webp", "cwebp", "image conversion"],
    "homepage": "https://github.com/8ctopus/webp8",
    "license": "MIT",
    "authors": [
        {
            "name": "8ctopus",
            "email": "hello@octopuslabs.io"
        }
    ],
    "require": {
        "symfony/console": "6.1.3",
        "symfony/stopwatch": "^6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpstan/phpstan": "^1.9",
        "phpmd/phpmd": "^2.13",
        "symfony/stopwatch": "^6"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Oct8pus\\Webp\\": "src"
        }
    },
    "scripts": {
        "fix": "php-cs-fixer fix --verbose",
        "fix-risky": "php-cs-fixer fix --allow-risky=yes --verbose",
        "phpstan": "phpstan analyse --level 9 src",
        "phpmd": "phpmd src ansi phpmd.xml"
    },
    "bin": [
        "bin/webp8.phar"
    ]
}
